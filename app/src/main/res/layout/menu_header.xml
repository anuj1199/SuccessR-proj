<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingStart="15dp"
    android:background="@color/yellow">
    <TextView
        android:id="@+id/menu_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true">
    </TextView>

    <TextView
        android:id="@+id/usr_emailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/heading"
        android:text="User Email Id"
        android:textSize="18sp"
        android:layout_above="@+id/menu_slogan"
        android:textColor="@color/darkBackground"/>
    <TextView
        android:textSize="20sp"
        android:id="@+id/usr_first_name"
        android:layout_width="wrap_content"
        android:fontFamily="@font/heading"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_above="@+id/usr_emailid"
        >
    </TextView>
    <TextView
        android:id="@+id/usr_last_name"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/heading"
        android:textStyle="italic"
        android:layout_toEndOf="@id/usr_first_name"
        android:layout_above="@+id/usr_emailid"
        >
    </TextView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="130dp"
        android:layout_height="175dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/logo"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        >
    </de.hdodenhof.circleimageview.CircleImageView>
</RelativeLayout>