<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resumeupdate">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="56dp"
                android:text="Update My Resume" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:gravity="center"
                android:text="Enter Details For Resume" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Name" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="236dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="enter your name" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="36dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Phone number" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="236dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="enter your phone number" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:text="Email" />

                <EditText
                    android:id="@+id/emailp"
                    android:layout_width="236dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="enter your email" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="38dp"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Address" />

                <EditText
                    android:id="@+id/addressp"
                    android:layout_width="236dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="enter your address" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="38dp"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Skills" />

                <EditText
                    android:id="@+id/skills"
                    android:layout_width="236dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="enter your skills" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="38dp"
                    android:gravity="center"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:text="Languages" />

                <EditText
                    android:id="@+id/lang"
                    android:layout_width="236dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="enter languages you know" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="38dp"
                    android:gravity="center"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:text="Education (Class 10th)" />

                <EditText
                    android:id="@+id/edu_10"
                    android:layout_width="236dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="enter your cgpa or percentage" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="38dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Education (Class 10 +2)" />
                <EditText
                    android:id="@+id/edu_12"
                    android:layout_width="236dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="38dp"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Education (College)" />
                <EditText
                    android:id="@+id/edu_col"
                    android:layout_width="236dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="38dp"
                    android:gravity="center"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:text="Project 1 Name" />
                <EditText
                    android:id="@+id/pro1n"
                    android:layout_width="236dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="38dp"
                    android:gravity="center"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:text="Project 1 Description" />
                <EditText
                    android:id="@+id/pro1d"
                    android:layout_width="236dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="38dp"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Project 2 Name" />
                <EditText
                    android:id="@+id/pro2n"
                    android:layout_width="236dp"
                    android:gravity="center"
                    android:layout_height="55dp"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="38dp"
                    android:gravity="center"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:text="Project 2 Description" />
                <EditText
                    android:id="@+id/pro2d"
                    android:layout_width="236dp"
                    android:gravity="center"
                    android:layout_height="55dp"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="38dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Exprience" />
                <EditText
                    android:id="@+id/exp"
                    android:layout_width="236dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:layout_weight="1" />
            </LinearLayout>
            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="build my resume" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>